<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/berlin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/fall_kingdom"
        android:text="About"
        android:textAlignment="center"
        android:textColor="@color/abu"
        android:textSize="40dp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_marginBottom="35dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape"
            android:layout_width="match_parent"
            android:layout_height="450dp">

            <!-- Kontainer Deskripsi dan Tombol -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/shape_about"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Deskripsi -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:fontFamily="@font/fall_kingdom"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:textColor="@color/berlin" />

                <!-- Tombol Bulat -->
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Tombol WhatsApp -->
                    <ImageButton
                        android:id="@+id/btn_whatsapp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_circle_button"
                        android:src="@drawable/ic_whatsapp"
                        android:scaleType="centerInside"
                        android:contentDescription="WhatsApp" />

                    <!-- Tombol Instagram -->
                    <ImageButton
                        android:id="@+id/btn_instagram"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_circle_button"
                        android:src="@drawable/ic_instagram"
                        android:scaleType="centerInside"
                        android:contentDescription="Instagram" />

                    <!-- Tombol Email -->
                    <ImageButton
                        android:id="@+id/btn_email"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_circle_button"
                        android:src="@drawable/ic_email"
                        android:scaleType="centerInside"
                        android:contentDescription="Email" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_profile"
            android:layout_width="match_parent"
            android:layout_height="125dp" />

    </FrameLayout>
</FrameLayout>
